<div class="hero-unit">
  <div class="row text-center">
    <% if current_user == @debate_page.no_side.user %>
      <h4 class='temporary-header span3'>Waiting for contestant</h4>
    <% else %>
      <%= render partial: '_debater_information', locals: {debate_side: @debate_page.yes_side, debate: @debate_page.debate} %>
    <% end %>
    <%= render 'debate_header' %>
    <% if current_user == @debate_page.yes_side.user %>
      <h4 class='temporary-header span3'>Waiting for contestant</h4>
    <% else %>
      <%= render partial: '_debater_information', locals: {debate_side: @debate_page.no_side, debate: @debate_page.debate}  %>
    <% end %>

  </div>
</div>

<div class="row">
    <%= render partial: 'update_debate_form', locals: {debate_side: @debate_page.yes_side, debate: @debate_page.debate} %>
    <%= render partial: 'update_debate_form', locals: {debate_side: @debate_page.no_side, debate: @debate_page.debate} %>
</div>
