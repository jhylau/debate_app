<div class="span6 debate-side-form">
  <%= form_for [@debate_page.debate,debate_side] do |f| %>
      <div class="span6 text-box">
        <h4 class="debater-name"><%= debate_side.debater.username %>'s argument:</h4>
        <%= f.text_area :argument, {placeholder:"waiting for argument", rows: "6", id:"#{debate_side.side}-argument"} %>
      </div>
      <% if current_user == debate_side.debater && debate_side.argument == nil %>
        <div class="span6 submit-button">
          <%= f.submit 'submit', class:"btn btn-danger", id: "submit-#{debate_side.side}-argument" %>
        </div>
      <% end %>
      <% if debate_side.argument != nil  && debate_side.opposing_argument != nil %>
      <% binding.pry %>
        <div class="span6 text-box">
           <h4 class="debater-name"><%= debate_side.debater.username %>'s rebuttal:</h4>
          <%= f.text_area :rebuttal, {placeholder:"waiting for rebuttal", rows: "6", id: "#{debate_side.side}-rebuttal"} %>
        </div>
        <% if current_user == debate_side.debater && debate_side.rebuttal == nil %>
          <div class="span6 submit-button">
            <%= f.submit 'submit', class:"btn btn-danger", id:"submit-#{debate_side.side}-rebuttal" %>
          </div>
        <% end %>
      <% end %>

      <% if debate_side.rebuttal != nil %>
        <div class="span6 text-box">
         <h4 class="debater-name"><%= debate_side.debater.username %>'s conclusion:</h4>
          <%= f.text_area :conclusion, {placeholder:"waiting for your conclusion", rows: "6", id: "#{debate_side.side}-conclusion"} %>
        </div>
        <% if current_user == debate_side.debater && debate_side.rebuttal != nil && debate_side.conclusion == nil %>
          <div class="span6 submit-button">
            <%= f.submit 'submit', class:"btn btn-danger", id: "submit-#{debate_side.side}-conclusion" %>
          </div>
        <% end %>
      <% end %>
  <% end %>
</div>
